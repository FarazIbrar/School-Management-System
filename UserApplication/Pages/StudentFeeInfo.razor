@code {
    [Parameter] public int regId { get; set; }
    [Parameter] public int year { get; set; }
    [Parameter] public int f { get; set; }

    public string? name;

    List<ModelFee> feeList = new List<ModelFee>();

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        name = DALStudent.GetStudentNameByRegID(regId);
        feeList = DALFee.GetStudentFeeInfo(regId,year);
    }


    public void SignOut()
    {
        globalName.userName = null;
        globalName.status = null;
        navigation.NavigateTo($"/Login");
    }


}

