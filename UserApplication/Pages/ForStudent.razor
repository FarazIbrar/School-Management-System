@code {

    ParentStudent ps = new ParentStudent();
    List<ModelExam> examList = new List<ModelExam>();
    List<ModelAttendance> attendanceList = new List<ModelAttendance>();
    List<ModelFee> feeList = new List<ModelFee>();
    bool flag = false,flag2=false;
    int selectedMonth, selectedYear;
    int feeYear;
    public void AttendanceInfo()
    {
        attendanceList = DALAttendance.GetStudentAttendanceReport(regID, selectedYear, selectedMonth);
        flag = true;

    }
    void FeeInfo()
    {
        feeList = DALFee.GetStudentFeeInfo(regID, feeYear);
        flag2 = true;
    }
    public void Reset()
    {
        flag = false;
    }
    public void ResetFee()
    {
        flag2 = false;
    }
    public void SignOut()
    {
        globalName.userName = null;
        globalName.status = null;
        navigation.NavigateTo($"/Login");
    }

    [Parameter] public int regID { get; set; }

    protected override void OnInitialized()
    {
        ps = DALStudent.GetStudentandParentByID(regID);
        examList = DALExam.GetStudentMarksReport(regID);
    }
}
