                            <h6 class="card-title text-center pb-3">Profile Details</h6>
                            <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                <div class="row">
                                    <!-- Student Details Table -->
                                    <div class="col-md-6">
                                        <h5 class="text-center pb-3">Student Details</h5>
                                        <table class="table table-hover">
                                            <tbody>
                                                <tr>
                                                    <th scope="row" class="p-2">Reg ID</th>
                                                    <td class="p-2">@ps.regID</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Student Name</th>
                                                    <td class="p-2">@ps.name</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Grade</th>
                                                    <td class="p-2">@ps.grade</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Section</th>
                                                    <td class="p-2">@ps.section</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Gender</th>
                                                    <td class="p-2">@ps.gender</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Date of Birth</th>
                                                        <td class="p-2">@ps.DOB.ToString("yyyy-MM-dd").Substring(0, 10)</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">CNIC</th>
                                                    <td class="p-2">@ps.cnic</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Admission No.</th>
                                                    <td class="p-2">@ps.admissionNo</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Admission Date</th>
                                                        <td class="p-2">@ps.admissionDate.ToString("yyyy-MM-dd").Substring(0, 10)</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Address</th>
                                                    <td class="p-2">@ps.address</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Email</th>
                                                    <td class="p-2">@ps.studentEmail</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Password</th>
                                                    <td class="p-2">@ps.studentPassword</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Parent Details Table -->
                                    <div class="col-md-6">
                                        <h5 class="text-center pb-3">Parent Details</h5>
                                        <table class="table table-hover">
                                            <tbody>
                                                <tr>
                                                    <th scope="row" class="p-2">Parent ID</th>
                                                    <td class="p-2">@ps.parentID</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Name</th>
                                                    <td class="p-2">@ps.parentName</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">CNIC</th>
                                                    <td class="p-2">@ps.parentcnic</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Occupation</th>
                                                    <td class="p-2">@ps.parentOccupation</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Salary</th>
                                                    <td class="p-2">@ps.parentSalary</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row" class="p-2">Phone No.</th>
                                                    <td class="p-2">@ps.phoneNo</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row mt-5">
                                    <div class="col-md-12">
                                        <h5 class="text-center pb-3">Exam Details</h5>
