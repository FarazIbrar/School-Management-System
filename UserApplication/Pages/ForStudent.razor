                                                            <th>Total Fee</th>
                                                            <th>Submitted Fee</th>
                                                            <th>Status</th>
                                                            <th>Submission Date</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in feeList)
                                                        {
                                                            <tr>
                                                                <td>@item.feeMonth</td>
                                                                <td>@item.totalFee</td>
                                                                <td>@item.submitedFee</td>
                                                                <td>@item.status</td>
                                                                <td>@item.submissionDate.ToString("yyyy-MM-dd").Substring(0, 10)</td>
                                                            </tr>
                                                        }
                                                        <div class="form-group col-md-12 mt-3">
                                                            <button class="btn btn-primary" @onclick="ResetFee">View Other Year</button>
                                                        </div>
                                                    </tbody>
                                                </table>
                                            }

                                        </div>
                                    </div>
                            </div>

                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                                <!-- Profile Edit Form -->
                                <!-- Add the rest of the form fields here -->


                            </div>




                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>



        </section>

