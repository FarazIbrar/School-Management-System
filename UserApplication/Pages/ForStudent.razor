                                            <thead>
                                                <tr>
                                                    <th>Exam ID</th>
                                                    <th>Exam Type</th>
                                                    <th>Obtained Marks</th>
                                                    <th>Total Marks</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in examList)
                                                {
                                                    <tr>
                                                        <td>@item.examID</td>
                                                        <td>@item.examType</td>
                                                        <td>@item.obtainedMarks</td>
                                                        <td>@item.totalMarks</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                    <div class="row mt-5">
                                        <div class="col-md-12">
                                            <h5 class="text-center pb-3">Attendance Details</h5>
                                            @if(!flag)
                                            {
                                                <div class="form-group col-md-6">
                                                    <label for="monthSelect">Month</label>
                                                    <select class="form-control" id="monthSelect" @bind="selectedMonth" required>
                                                        <option value="">Select Month</option>
                                                        @for (int month = 1; month <= 12; month++)
                                                        {
                                                            <option value="@month">@month</option>
                                                        }
                                                    </select>
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label for="yearSelect">Year</label>
                                                    <select class="form-control" id="yearSelect" @bind="selectedYear" required>
                                                        <option value="">Select Year</option>
                                                        @for (int year = 2024; year <= 2036; year++)
                                                        {
                                                            <option value="@year">@year</option>
                                                        }
                                                    </select>
                                                </div>

                                                <div class="form-group col-md-12 mt-3">
                                                    <button class="btn btn-primary" @onclick="AttendanceInfo">View</button>
                                                </div>
                                            }
                                            else
                                            {
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>Date</th>
                                                            <th>status</th>
                                                            
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in attendanceList)
                                                        {
                                                            <tr>
                                                                <td>@item.attendanceDate.ToString("yyyy-MM-dd").Substring(0, 10)</td>
                                                                <td>@item.status</td>
                                                                
                                                            </tr>
                                                        }
                                                        <div class="form-group col-md-12 mt-3">
                                                            <button class="btn btn-primary" @onclick="Reset">View Other Month</button>
                                                        </div>
                                                    </tbody>
                                                </table>
                                            }
                                            
                                        </div>
                                    </div>
                                    <div class="row mt-5">
                                        <div class="col-md-12">
                                            <h5 class="text-center pb-3">Fee Details</h5>
                                            @if (!flag2)
                                            {

                                                <div class="form-group col-md-6">
                                                    <label for="yearSelect">Year</label>
                                                    <select class="form-control" id="yearSelect" @bind="feeYear" required>
                                                        <option value="">Select Year</option>
                                                        @for (int year = 2024; year <= 2036; year++)
                                                        {
                                                            <option value="@year">@year</option>
                                                        }
                                                    </select>
                                                </div>

                                                <div class="form-group col-md-12 mt-3">
                                                    <button class="btn btn-primary" @onclick="FeeInfo">View Fee</button>
                                                </div>
                                            }
                                            else
                                            {
                                                <table class="table table-striped">
                                                    <thead>
                                                        <tr>
