@code {
    public bool f = true;
    int regID;
    public DateTime date;
    ModelStudent s = new ModelStudent();
    ParentStudent student = new ParentStudent();
    List<ParentStudent> listStudents = new List<ParentStudent>();
    List<ParentStudent> listClassStudents = new List<ParentStudent>();
    List<ModelAttendance> listAttendance = new List<ModelAttendance>();
    public int flag;
    protected override void OnInitialized()
    {
        LoadData();
        base.OnInitialized();
    }

    private void LoadData()
    {
        listStudents = DALStudent.GetAllStudents();
    }


    public string grade = "all";

    void SetGrade(string n)
    {
        grade = n;
        LoadData();
        LoadClassData();

    }
    void LoadClassData()
    {

        listClassStudents = DALStudent.GetStudentByClass(grade);

    }

    ModelAttendance attendance = new ModelAttendance();

    private void MarkAttendance(int id, string status, DateTime date)
    {
        var attendance = new ModelAttendance
            {
                regID = id,
                status = status,
                attendanceDate = date
            };

        // Remove any existing record for the same student
        listAttendance.RemoveAll(a => a.regID == id);

        // Add the new attendance record
        listAttendance.Add(attendance);
    }


    public void SubmitAttendancee()
    {

        DALAttendance.SubmitAttendance(listAttendance);
        listAttendance.Clear();
    }

    public void SignOut()
    {
        globalName.userName = null;
        globalName.status = null;
        navigation.NavigateTo($"/Login");
    }
}